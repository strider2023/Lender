<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/profile_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif-light"
            android:text="DOB"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/gender" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Marital Status"
                android:textColor="@color/colorBaseDark"
                android:textSize="18sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:entries="@array/marital_status"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Employment Status"
                android:textColor="@color/colorBaseDark"
                android:textSize="18sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:entries="@array/employment_status"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="Residential Status"
                android:textColor="@color/colorBaseDark"
                android:textSize="18sp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:entries="@array/residential_status" />

        </LinearLayout>

        <EditText
            android:id="@+id/profile_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_edittext_bg"
            android:fontFamily="sans-serif-light"
            android:hint="Home Address"
            android:imeOptions="actionNext"
            android:inputType="textPostalAddress"
            android:maxLines="5"
            android:minLines="3"
            android:padding="10dp"
            android:textColor="@color/colorBaseDark" />

        <CheckBox
            android:id="@+id/profile_address_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Home address same as current?" />

        <EditText
            android:id="@+id/profile_current_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_edittext_bg"
            android:fontFamily="sans-serif-light"
            android:hint="Current Address"
            android:imeOptions="actionDone"
            android:inputType="textPostalAddress"
            android:maxLines="5"
            android:minLines="3"
            android:padding="10dp"
            android:textColor="@color/colorBaseDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_edittext_bg"
            android:fontFamily="sans-serif-light"
            android:hint="Number of months in current residence"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBaseDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_edittext_bg"
            android:fontFamily="sans-serif-light"
            android:hint="PAN Card ID"
            android:imeOptions="actionDone"
            android:inputType="textCapCharacters"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBaseDark" />

    </LinearLayout>

</ScrollView>