<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-light"
        android:text="The most fulfilling\nlending experience."
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/splash_sign_in_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_white_btn"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="Sign In"
            android:layout_weight="1"
            android:textColor="@drawable/selector_white_text_toggle" />

        <Button
            android:id="@+id/splash_sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/selector_white_btn"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="Sign Up"
            android:layout_weight="1"
            android:textColor="@drawable/selector_white_text_toggle" />

    </LinearLayout>

    <Button
        android:id="@+id/splash_sign_up_facebook_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/selector_white_btn"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Connect With Facebook"
        android:textColor="@drawable/selector_white_text_toggle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Terms &amp; Conditions"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white" />

</LinearLayout>