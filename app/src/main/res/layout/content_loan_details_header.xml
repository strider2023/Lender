<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Borrower"
                android:textColor="@color/colorBaseDark"
                android:textSize="14sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Lender"
                android:textColor="@color/colorBaseDark"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/loan_details_borrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Arindam Nath"
                android:textColor="@color/colorBaseDark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:tint="@android:color/holo_blue_dark"
                android:src="@drawable/ic_supervisor_account_black_48dp" />

            <TextView
                android:id="@+id/loan_details_lender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Gaurav Jalan"
                android:textColor="@color/colorBaseDark"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/loan_details_pending_amount_borrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_borrow_dark"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="₹1200"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/loan_details_pending_amount_lender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_lend_dark"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="₹500"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loan_details_total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:text="₹1500"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/loan_details_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_base_dark"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="Active"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/loan_details_tenure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="3 Months"
                android:paddingRight="5dp"
                android:textColor="@color/colorBaseDark"
                android:drawableLeft="@drawable/ic_schedule_black_24dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBaseDark"
                android:layout_margin="3dp"/>

            <TextView
                android:id="@+id/loan_details_issue_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:paddingLeft="5dp"
                android:text="5 Jan 2016"
                android:textColor="@color/colorBaseDark"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/splash_divider_footer"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/colorBaseDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="@string/repayment_schedule"
        android:textAllCaps="true"
        android:textColor="@color/colorBaseDark"
        android:textSize="24sp" />

    <View
        android:layout_width="@dimen/splash_divider_footer"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/colorBaseDark" />
</LinearLayout>