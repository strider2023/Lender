<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/lend_list_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_account_circle_black_48dp"
        android:tint="@color/colorPrimary"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/lend_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp"
            android:text="Arindam Nath"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/colorBase"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lend_list_tenure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="for 3 Months"
            android:textAllCaps="true"
            android:textColor="@color/colorBaseDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lend_list_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="3 mins Ago"
            android:textAllCaps="true"
            android:textColor="@color/colorBase"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lend_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="â‚¹1500"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="36sp" />

</LinearLayout>